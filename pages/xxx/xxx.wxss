/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.box {
  width: 100%;
  height: 60px;
  line-height: 60px;
  background-color: #f5f5f5;
  margin-bottom: 10px;
  padding: 0 20px;
  position: relative;
}

.delete {
  position: absolute;
  right: 20px;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 30px;
  height: 30px;
  background-color: red;
  color: white;
  text-align: center;
  line-height: 30px;
  border-radius: 50%;
}
